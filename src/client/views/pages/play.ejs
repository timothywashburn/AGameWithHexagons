<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Title</title>
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous" />
    <style>
        .gameLobby {
            cursor: pointer;
        }

        #game {
            display: none
        }
    </style>
</head>
<body>
<div id="gameLobby">
    <%- include('../partials/nav', {current: 'play'}) %>

    <div id="lobbyContainer"></div>

    <div class="modal" id="promptModal" tabindex="-1" aria-labelledby="promptModalLabel" aria-hidden="true"
         data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Welcome!</h5>
                </div>
                <div class="modal-body">
                    <p class="text-center">Please select an option:</p>
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary" id="loginBtn">Login</button>
                        <button type="button" class="btn btn-secondary" id="registerBtn">Register</button>
                        <button type="button" class="btn btn-outline-secondary" id="guestBtn">Continue as Guest</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="game">

    <%- include('../partials/game-start') %>
    <%- include('../partials/topbar') %>
    <canvas id="gameCanvas"></canvas>
    <%- include('../partials/sidebar') %>

    <style>
        body {
            background-color: #f0f0f0;
        }

        #gameCanvas {
            position: fixed;
            background: white;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .modal-header h5 {
            text-align: center;
            width: 100%;
        }

        .modal-dialog {
            margin-top: -10vh;
        }

        html, body {
            margin: 0;
            height: 100%;
            overflow: hidden
        }
    </style>
</div>


<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="play.js"></script>
</body>
</html>
