<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Forgot Password/Username</title>

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous" />
</head>
<body>
<%- include('../partials/nav') %>

<div class="reset-wrapper">
    <div class="reset-container">
        <h2>Recover Username or Password</h2>

        <div class="spacer"></div>

        <form id="forgotForm">
            <div class="info-field form-group">
                <label for="email">Email Address</label>
                <input type="text" id="email" class="form-control" name="email" required>
            </div>

            <div class="spacer"></div>

            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-secondary active" id="password-tab">Forgot Password</button>
                <button type="button" class="btn btn-secondary" id="username-tab">Forgot Username</button>
            </div>

            <p id="forgotError"></p>

            <button type="submit" class="reset-btn danger" id="forgotBtn">Submit</button>

            <div class="forgot">
                <p><a href="/login">Back to Login</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f0f0f0;
        margin: 0;
    }

    .reset-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh;
    }

    .reset-container {
        font-family: Arial, sans-serif;
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        width: 550px;
    }

    .input-group label {
        display: block;
        margin-bottom: 5px;
    }

    .input-group input {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #cccccc;
    }

    .reset-btn {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #2d7df6;
        color: white;
        cursor: pointer;
    }

    .reset-btn:active {
        background-color: #1a5ad6;
    }

    #forgotError {
        padding-top: 40px;
        padding-bottom: 40px;
        height: 20px;
    }

    .forgot {
        padding-top: 25px;
        text-align: center;
    }

    .spacer {
        padding-top: 20px;
    }
</style>

<script src="forgot.js"></script>
</body>
</html>
